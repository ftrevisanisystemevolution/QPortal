@model QPortal.Models.SecondaryNavBarModel

@{ 
    string SelfServiceString = "SELF-SERVICE BI";
    string ReportDistribuitiString = "REPORT DISTRIBUITI";
    string DeveloperString = "DEVELOPER";
    string UserString = "USER";
    string SupervisorString = "SUPERVISOR";
    string CertifierString = "CERTIFIER";
}

<nav id="subnav" class="navbar navbar-default navbar-sub" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            @if (!string.IsNullOrEmpty(Model.FarmName))
            {
                <span class="navbar-brand">@Model.FarmName</span>
            }
            <ul class="nav navbar-nav">
                <li class="divider-vertical"></li>
                <li id="home">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="subnav-icon">
                            <i class="fa fa-home"></i>
                        </span>
                        <span class="hidden-xs">Home</span>
                    </a>
                </li>
                @if (!string.IsNullOrWhiteSpace(Model.FarmName) && 
                    Model.FarmName.ToUpper().Contains(SelfServiceString) && !string.IsNullOrWhiteSpace(Model.Role))
                {
                    if (Model.Role.ToUpper().Equals(SupervisorString) || Model.Role.ToUpper().Equals(DeveloperString))
                    {
                        <li id="new">
                            <a href="@Url.Action("CreateReport", "Reports")">
                                <span class="subnav-icon">
                                    <i class="fa fa-plus-circle"></i>
                                </span>
                                <span class="hidden-xs">Nuovo</span>
                            </a>
                        </li>
                        <li id="publish">
                            <a href="@Url.Action("Index", "Publish")">
                                <span class="subnav-icon">
                                    <i class="fa fa-share-alt"></i>
                                </span>
                                <span class="hidden-xs">Pubblica</span>
                            </a>
                        </li>
                        if (Model.Role.ToUpper().Equals(SupervisorString))
                        {
                            <li id="distribute">
                                <a href="@Url.Action("Index", "Share")">
                                    <span class="subnav-icon">
                                        <i class="fa fa-share-square-o"></i>
                                    </span>
                                    <span class="hidden-xs">Distribuisci</span>
                                </a>
                            </li>
                        }
                    }
                }

                @if (!string.IsNullOrWhiteSpace(Model.FarmName) && Model.FarmName.ToUpper().Contains(ReportDistribuitiString))
                {
                    <li id="archive">
                        <a href="@Url.Action("Index", "Home")">
                            <span class="subnav-icon">
                                <i class="fa fa-folder-o"></i>
                            </span>
                            <span class="hidden-xs">Archivio</span>
                        </a>
                    </li>
                }

                <li id="guidelines">
                    <a href="@Url.Action("Index", "LineeGuida")">
                        <span class="subnav-icon">
                            <i class="fa fa-newspaper-o"></i>
                        </span>
                        <span class="hidden-xs">Linee Guida</span>
                    </a>
                </li>
                <li id="docs">
                    <a href="~/Docs/REPQ0-ManualeUtente.pdf" target="_blank">
                        <span class="subnav-icon">
                            <i class="fa fa-book"></i>
                        </span>
                        <span class="hidden-xs">Manuale Utente</span>
                    </a>
                </li>
                <li id="support">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="subnav-icon">
                            <i class="fa fa-support"></i>
                        </span>
                        <span class="hidden-xs">Supporto</span>
                    </a>
                </li>
            </ul>

        </div>
    </div>
</nav>
