	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	<script src="~/Scripts/MvcGrid/mvc-grid.js"></script>

	@RenderSection("scripts", required: false)

    <script>
        //used to set initials based on name
        $('.user-icon').initial(
            {
                width: 38,
                height: 38,
                color: '#FFFFFF',
                textColor: '#5CA740'
            }
        );
    </script>

	<script type="text/javascript">

		$('.fancybox').fancybox({
			openEffect: 'elastic',
			closeEffect: 'elastic',
			helpers: {
				title: {
					type: 'inside'
				}
			}
		});

		$('.fancyboxgray').fancybox({
			openEffect: 'elastic',
			closeEffect: 'elastic',
			helpers: {
				title: {
					type: 'inside'
				}
			},
			beforeShow: function () {
				$(".fancybox-skin").css("backgroundColor", "rgb(180, 168, 154);");
		}
		});

		$('.fancyboxgray300').fancybox({
			openEffect: 'elastic',
			closeEffect: 'elastic',
			width: '300px',
			helpers: {
				title: {
					type: 'inside'
				}
			},
			beforeShow: function () {
				$(".fancybox-skin").css("backgroundColor", "rgb(180, 168, 154);");
			}
		});

		$('.mvc-grid').mvcgrid();

		$(document).ready(function () { 
			$('#Streams').change(function () {
				$('#idstream').val(this.value);
				$('#desstream').val($(this).find("option:selected").text());
			})
		});

		function clicka(val)
		{
			val.href += "&idstream=" + $('#idstream').val() + "&selstream=" + $('#desstream').val() + "&FarmList=" + $('#FarmList').val();
		}
	</script>

</body>
</html>
